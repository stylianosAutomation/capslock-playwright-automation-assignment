{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "node",
      "@playwright/test"
    ],
    "noEmit": true
  },
  "include": [
    "tests/**/*",
    "playwright.config.ts",
    "support-commands/**/*",
    "environments/**/*"
  ]
}
